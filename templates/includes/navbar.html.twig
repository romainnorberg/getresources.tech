<nav id="navbar" class="navbar is-light">
    <div class="container">
        <div class="navbar-brand">
            {% include('includes/logo.html.twig') %}
            <span class="navbar-burger burger" data-target='navMenu'>
                <span></span>
                <span></span>
                <span></span>
            </span>
        </div>
        <div id="navMenu" class="navbar-menu">
            <a href="/" class="navbar-item">
                {% trans %}Search{% endtrans %}
            </a>
            <div class="navbar-end">
                <a href="{{ path('submit') }}" class="navbar-item">
                    {% trans %}Submit{% endtrans %}
                </a>
                {% if app.user %}
                    <a href="{{ path('account') }}" class="navbar-item">
                        {{ app.user.username }}
                    </a>
                    <a href="{{ path('logout') }}" class="navbar-item">
                        {% trans %}Logout{% endtrans %}
                    </a>
                {% else %}
                    <a href="{{ path('user_registration') }}" class="navbar-item">
                        {% trans %}Sign up{% endtrans %}
                    </a>
                    <a href="{{ path('login') }}" class="navbar-item">
                        {% trans %}Login{% endtrans %}
                    </a>
                {% endif %}
                <span class="navbar-item">
                    <p class="control">
                        <a class="bd-tw-button button" data-size="large", data-social-network="Twitter"
                           data-social-action="tweet"
                           data-social-target="{{ website_url }}" target="_blank" href="https://twitter.com/intent/tweet?text=getresources.tech: Find all tech resources, search and filter by language and more&amp;url={{ website_url }}&amp;via=getresources_t">
                            <span class="icon">
                                <i class="fa fa-twitter"></i>
                            </span>
                            <span>
                                Tweet
                            </span>
                        </a>
                    </p>
                </span>
            </div>
        </div>
    </div>
</nav>